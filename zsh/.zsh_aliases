# Lazygit Ezy access
alias lg=lazygit
alias ld=lazydocker

alias n=nvim
# Never miss clear command
alias c=clear
alias cl=clear
alias cls=clear
alias clr=clear

# fzf fuzzy finding stuff
alias ff='fzf --preview "bat --color=always --style=numbers --line-range=:500 {}"'
alias nf='fzf -m --preview="bat --color=always {}" --bind "enter:become(nvim {+})"'
alias nd='nvim -c Oil'

# Making Life easy aliases
alias __="sudo shutdown"
alias t="tmux attach"
alias reload="source ~/.zshrc"
alias refresh="exec zsh"
alias size="du -sh --block-size=MB"

# Basic listings with icons
alias ls='eza --icons --color=auto --group-directories-first'
alias ll='eza -l --icons --color=auto --group-directories-first'
alias la='eza -la --icons --color=auto --group-directories-first'

# Tree view with icons
alias lt='eza --tree --level=2 --icons'
alias tree='eza --tree --level=4 --icons'

# Sort by file size with icons
alias lS='eza -l --icons --sort=size --reverse'

# Sort by modification time with icons
alias lm='eza -l --icons --sort=modified --reverse'

# Show only directories with icons
alias ldir='eza -lD --icons'

# Show extended attributes with icons
alias lx='eza -l --icons --extended'

# Show Git status with icons
alias lG='eza -l --icons --git'

# Colorful output with icons
alias lc='eza -l --icons --color=always --group-directories-first'

# Show files with their full path
alias lf='eza -l --icons --color=auto --group-directories-first '

# Show hidden files only
alias l.='eza -ld --icons .*'

# List files sorted by extension
alias lE='eza -l --icons --sort=extension'

# List files with headers and across
alias lh='eza -lh --icons --across --group-directories-first'

# List files with long format and show created time
alias lT='eza -l --icons --time=created --sort=created'

# List files and show only permissions, user, and file name
alias lp='eza -l --icons --no-filesize --no-time --no-user --no-permissions'

# List files and show octal file permissions
alias lo='eza -l --icons --octal-permissions --no-permissions'

# List files and show inode number
alias li='eza -l --icons --inode'

# Grid view
alias lgg='eza --grid --icons'
